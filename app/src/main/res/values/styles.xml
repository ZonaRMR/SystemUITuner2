<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="colorAccent">@color/colorAccent3</item>
        <item name="android:navigationBarColor">@color/colorPrimary2</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark2</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="DARK" parent="Theme.AppCompat" >
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark2</item>
        <item name="android:navigationBarColor">@color/colorPrimary2</item>
        <item name="colorAccent">@color/colorAccent_Dark</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark2</item>
    </style>

    <style name="DARK.NoAppBar" parent="DARK">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

</resources>
