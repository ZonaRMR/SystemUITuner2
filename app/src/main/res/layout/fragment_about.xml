<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/credits_frame"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            tools:ignore="UselessLeaf">

            <TextView
                android:id="@+id/app_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/created_by"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/image_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/images_from"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/spanish_credit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/spanish_from"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/abt_desc"
                android:textAlignment="center"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/abt_warn"
                android:textAlignment="center"
                android:textSize="18sp" />

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                app:cardElevation="1dp"
                app:cardUseCompatPadding="true">

                <include
                    layout="@layout/donate_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/debug_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="16dp"
                android:text="@string/debug_info"
                android:textAlignment="center"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/vername"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/version_name"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/vernum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/version_code"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/build_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/build_date"
                android:textAlignment="center" />

        </LinearLayout>
    </ScrollView>

</FrameLayout>
